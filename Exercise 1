//Exercise 1 - Verificação de igualdade de variáveis;

function igualdadeVariaveis(){
mesmoNome = (nomeDoFulano == nomeDoBeltrano)
console.log(mesmoNome)
}
igualdadeVariaveis()


//Exercise 2 - Verificação de maioridade;

function verMaior(){
maiorDeIdade = (idade >= 18)
console.log(maiorDeIdade)
}
verMaior()


//Exercise 3 - Cálculo de juros de um boleto;

function jurosBol(){
valorComJuros = (boleto * 1.1)
console.log(valorComJuros)
}
jurosBol()


