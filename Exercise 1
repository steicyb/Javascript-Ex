//Exercise 5 - Lucro e margem bruta de uma empresa;

function lucroMargem(){
lucroBruto = receitaLiquida - custoProdutosVendidos
margemBruta = (lucroBruto / receitaLiquida) * 100
console.log(margemBruta)
}
lucroMargem()


//Exercise 6 - Atualização de saldo;

function atSaldo(){
saldo = 1000.00
saldo = saldo - 99.9
saldo = saldo + 2500.00
saldo = saldo - 0.1
saldo = saldo * 0.75
saldo = saldo / 2
console.log(saldo)
}
atSaldo()
